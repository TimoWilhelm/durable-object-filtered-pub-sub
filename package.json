{
	"name": "do-sharding",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"deploy": "npm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"db:generate": "npm-run-all --parallel db:generate:**",
		"db:generate:durable:publisher": "npx drizzle-kit generate --config ./src/durable/Publisher/db/drizzle.config.ts",
		"db:generate:durable:subscriber": "npx drizzle-kit generate --config ./src/durable/Subscriber/db/drizzle.config.ts",
		"db:generate:durable:debug-tracker": "npx drizzle-kit generate --config ./src/durable/DebugTracker/db/drizzle.config.ts"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.5.0",
		"@types/node": "^22.15.30",
		"drizzle-kit": "^0.31.1",
		"drizzle-orm": "^0.44.2",
		"npm-run-all": "^4.1.5",
		"temporal-polyfill": "^0.3.0",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"wrangler": "^4.19.1"
	}
}
